    <!-- Remove flash greeting on click -->
    <script>
      (function(){
        var flashes = document.querySelectorAll(".alert");
        flashes.forEach(function(flash){
          flash.onclick = function() {
            flash.parentNode.removeChild(flash)
          };
        });
      })()
    </script>
